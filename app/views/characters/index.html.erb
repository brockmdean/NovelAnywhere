<h1>Listing characters</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @novel.characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.alias %></td>
        <td><%= character.description %></td>
        <td><%= link_to 'Show', character_path(:id => character) %></td>
        <td><%= link_to 'Edit', edit_character_path(:id => character) %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

